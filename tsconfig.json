{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": [
			"ES2022"
		],
		"target": "es2017",
		"outDir": "dist",
		"sourceMap": true,
		"declaration": true,
		"noImplicitThis": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
	},
	"include": [
		"./src/**/*"
	]
}
